@model IdentityServer.ViewModels.Account.ResetPasswordConfirmationViewModel

<div class="main-header"></div>

<form asp-controller="Account" asp-action="ResetPasswordConfirmation" class="identity-form" method="post">

	<input asp-for="ReturnUrl" type="hidden" />

	<h1 class="mb-3">Reset password confirmation</h1>

	<div class="title-divider"></div>

	<div class="form-group">
		<label>Your password has been reset.</label>
	</div>

	<div class="form-group right-row">
		<a class="btn btn-primary" href="@Url.Action("Login", "Account", new { returnUrl = Model.ReturnUrl } )">Login</a>
	</div>

</form>
