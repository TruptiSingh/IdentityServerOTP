@model IdentityServer.ViewModels.Account.ResetPasswordConfirmationViewModel

<div class="main-header"></div>

<form asp-controller="Account" asp-action="CreatePasswordConfirmation" class="identity-form" method="post">

	<input asp-for="ReturnUrl" type="hidden" />

	<h1 class="mb-3">Create password confirmation</h1>

	<div class="title-divider"></div>

	<div class="form-group">
		<label>Your password has been created.</label>
	</div>

	<div class="form-group right-row">
		<a class="btn btn-primary" href="@Model.ReturnUrl">Login</a>
	</div>

</form>
